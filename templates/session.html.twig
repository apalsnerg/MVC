{% extends "base.html.twig" %}

{% block title %}Birks sida | MVC | Session{% endblock %}

{% block body %}
    <main>
        <h1>Här finns information om sessionen.</h1>
        <p>Data contained in session (under #attributes)</p>
        {{ dump(sessiondata) }}
        <hr>
        <p><a href="{{ path('destroy') }}">Förinta sessionen</a></p>
        <div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </main>
{% endblock %}